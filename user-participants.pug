                .participants-line.margin-end
                    .profile
                        .user
                            .user-label
                                .user-photo
                                    a(href='user-profile.html')
                                        img(src="images/user-photo.png", alt="")
                                    .online
                                a.user-info(href='user-profile.html')
                                    .user-name.size-26.text-black Андрей Кулагин
                                    .user-level.size-16.text-grey-2 Мастер
                                    .user-location.size-16.text-grey-2 Москва, Россия
                        .list-button
                            .delete 
                                img(src="icon/recover.svg", alt="")
                                .text-green.size-20.desktop Принять
                            .delete 
                                img(src="icon/unsub.svg", alt="")
                                .text-red.size-20 Отклонить
                        
        include component/footer.pug