                .nav-sort-line.button По дате
                .nav-sort-line.button По популярности
        .profile.margin-end
            .page-card-list-small
                - for (var x = 0; x < 6; x++)
                    .card.button.card-map
                        .card-image 
                            img(src="images/state.png", alt="")
                        .card-title.product-title
                            a.size-26.weight-500.text-black(href='user-description.html') Гидрокостюм Waterproof Серия Спорт WP Skin
                            .card-bottom
                                .card-bottom-info
                                    .weight-500.size-18.open-user-card Name 1
                                    .user-card.white-white-border.card
                                        .user 
                                            .user-label
                                                .user-photo
                                                    a(href='guest-profile.html')
                                                        img(src="images/user-photo.png", alt="")
                                                    .online
                                                a.user-info(href='guest-profile.html')
                                                    .user-name.size-30.weight-500.text-black Андрей Кулагин
                                                    .user-level.text-grey-2 Мастер
                                                    .user-location.text-grey-2 Москва, Россия
                                            .user-button.desktop
                                                button.user-follow.blue.text-white.size-20 Подписаться
                                                button.user-mess.white-blue-border.text-blue.size-20 Сообщение
                                    .size-14 Россия, Москва
                                .card-content-bottom
                                    button.button.size-22.text-black-2
                                        img(src="icon/blue-like.svg", alt="")
                                        | 20
                                    button.button.size-22.text-black-2
                                        img(src="icon/comment.svg", alt="")
                                        | 25
        include component/footer.pug 