doctype html 
html 
    include component/head.pug
    body 
        include component/user-header.pug 
        .hr
        include component/user-left-menu.pug 
        .nav-line.content
            .nav-title
                .size-50.weight-500.text-black Избранное
                .size-50.text-grey-2 21
            .nav-sort.light-blue-blue-border.text-blue.size-14.button
