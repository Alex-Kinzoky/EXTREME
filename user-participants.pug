doctype html 
html 
    include component/head.pug
    body 
        include component/user-header.pug 
        .hr
        main.main
            include component/user-left-menu.pug 
            .content-wrapper
                .nav-line.content
                    .nav-title.size-30.weight-500.text-black 
                        | Подписки
                .nav-line.content.desktop
                    .search-line.button.white-blue-border.top-search.desktop
                        .search-image.blue-search
                        input.size-14.text-blue(type="text" placeholder="Поиск пользователя")
                        button.blue.button.size-14.text-white Поиск
                - for (var x = 0; x < 3; x++)
                    .participants-line
                        .profile
                            .user
                                .user-label
                                    .user-photo
                                        a(href='user-profile.html')
                                            img(src="images/user-photo.png", alt="")
                                        .online
                                    a.user-info(href='user-profile.html')
                                        .user-name.size-26.text-black Андрей Кулагин
                                        .user-level.size-16.text-grey-2 Мастер
                                        .user-location.size-16.text-grey-2 Москва, Россия
                            .list-button
                                .delete 
                                    img(src="icon/recover.svg", alt="")
                                    .text-green.size-20.desktop Принять
                                .delete 
                                    img(src="icon/unsub.svg", alt="")
